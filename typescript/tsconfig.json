{
    "compilerOptions": {
        "esModuleInterop": true,
        "types": ["node", "jest"],
        "module": "ES6",
        "removeComments": true,
        "preserveConstEnums": true,
        "noEmit": false,
        "sourceMap": true,
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": false,
    },
    "moduleFileExtensions": [
        "js",
        "mjs",
        "ts",
        "mts",
        "tsx",
    ],
    "testEnvironment": "node",
    "extends": "@tsconfig/recommended/tsconfig.json"
}
